@page
@model BookListRazor.Pages.BookList.IndexModel

<br />

<div class="container row p-0 m-0">
	<div class="col-10">
		<h2 class="text-info">Book List</h2>
	</div>
	<div class="col-2">
		<a asp-page="Create" class="btn btn-info form-control text-white">Create new Book</a>
	</div>

	<div class="col-12 border p-3 mt-3">
		<form method="post">
			@if(Model.Books.Count > 0)
			{
				<table class="table table-striped border">
					<tr class="table-secondary">
						<th>
							<label asp-for="Books.FirstOrDefault().Name"></label>
						</th>
						<th>
							<label asp-for="Books.FirstOrDefault().Author"></label>
						</th>
						<th>
							<label asp-for="Books.FirstOrDefault().SBIN"></label>
						</th>
						<th></th>
					</tr>
					@foreach(var book in Model.Books)
					{
						<tr>
							<td>@Html.DisplayFor(b=>book.Name)</td>
							<td>@Html.DisplayFor(b=>book.Author)</td>
							<td>@Html.DisplayFor(b=>book.SBIN)</td>
							<td>
								<button asp-page-handler="Delete" asp-route-id="@book.Id" onclick="return confirm('Are you sure you want to delete delete?')" class="btn btn-danger btn-sm">Delete</button>
								<a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-success btn-sm text-white">Edit</a>
							</td>
						</tr>
					}
				</table>
			}
			else
			{
				<p>No books availble</p>
			}
		</form>
	</div>

	<div class="col-12" style="text-align:center;">
		<br />
		<span class="h3 text-info">OR</span>
		<br />
	</div>
	<div class="col-12 border p-3">
		<table id="DT_load" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>Name</th>
					<th>Author</th>
					<th>SBIN</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>

</div> 

@section Scripts
{
	<script src="~/js/bookList.js"></script>
}